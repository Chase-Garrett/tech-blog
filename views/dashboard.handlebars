<div class="container">
  <h3 class="my-posts text-center col">My Posts</h3>
  <div class="container">
  <!-- For each post, the post-details partial is used to render each post's data -->
  {{#each posts as |post|}}
  {{> post-details}}
  <a role="button" class="btn text-center" id="edit" href="/edit/{{id}}">Edit Post</button>
  {{/each}}
</div>