<div class="container">
  <div class="d-grid gap-2 col-6 mx-auto">
     <a role="button" class="btn text-center" id="new-post" href="/newPost">+ New Post</a>
  </div>
  <h3 class="All-Posts text-center">All Posts</h3>
  <section class="column">
    <!-- For each post, the post-details partial is used to render each post's data -->
    {{#each posts as |post|}}
    {{> post-details}}
    {{/each}}
  </section>
</div>